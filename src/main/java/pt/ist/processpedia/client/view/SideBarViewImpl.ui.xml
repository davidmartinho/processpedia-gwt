<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:pt.ist.processpedia.client.ui">
  <ui:style>
    .width100 { width: 100%; }
    .height100 { height: 100%; }
    .center { text-align: center; }
  </ui:style>
  <g:StackLayoutPanel unit="EM">
    <g:stack>
      <g:customHeader size="2.5">
        <g:Label addStyleNames="{style.center}">Inbox (23)</g:Label>
      </g:customHeader>
      <g:ScrollPanel>
        <g:VerticalPanel addStyleNames="{style.width100} {style.height100}">
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
      </g:VerticalPanel>
      </g:ScrollPanel>
    </g:stack>
    <g:stack>
      <g:customHeader size="2.5">
        <g:Label addStyleNames="{style.center}">Sent (16)</g:Label>
      </g:customHeader>
      <g:ScrollPanel>
        <g:VerticalPanel addStyleNames="{style.width100} {style.height100}">
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
        <p:SideBarSectionImpl />
        </g:VerticalPanel>
      </g:ScrollPanel>
    </g:stack>
  </g:StackLayoutPanel>
</ui:UiBinder>