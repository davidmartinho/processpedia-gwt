<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:v="urn:import:pt.ist.processpedia.client.view"
             xmlns:w="urn:import:pt.ist.processpedia.client.ui">
  <ui:style>
    .view { width: 100%; padding: 10px 10px; }
    .processTitle { font-size: 28px; color: #000; margin-bottom: 2px; }
    .processDescription { font-size: 13px; color: #000; margin-bottom: 2px; }
  </ui:style>
  <g:VerticalPanel styleName="{style.view}">
    <w:EditableLabel styleName="{style.processTitle}" text="Manage John Doe's MSc Thesis" />
    <w:EditableLabel text="This process intends to manage the MSc thesis of John Doe" addStyleNames="{style.processDescription}" />
    <v:GoalListViewImpl />
  </g:VerticalPanel>
</ui:UiBinder>