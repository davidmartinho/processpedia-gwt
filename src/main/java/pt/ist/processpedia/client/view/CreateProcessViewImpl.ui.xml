<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p="urn:import:pt.ist.processpedia.client.view">
  <ui:style>
    .view { padding: 10px 10px; }
    .title { font-size: 28px; color: #000; margin-bottom: 20px; }
    .label { font-size: 16px; color: #000; margin-bottom: 2px; margin-top: 10px; }
    .textbox { width: 400px; padding: 5px 2px; font-family: 'helvetica-neueu', helvetica, sans-serif; font-size: 14px; font-weight: 300; border: 1px solid #AAA; -webkit-border-radius: 5px; }
    .cancelLink { padding-right: 10px; border-right: 1px solid #000; margin-right: 10px; font-size: 18px; font-family: 'helvetica-neueu', helvetica, sans-serif; font-weight: 300; cursor: pointer; }
    .button { margin-top: 20px; font-size: 18px; font-family: 'helvetica-neueu', helvetica, sans-serif; font-weight: 300; }
    .width100 { width: 100%; height: 100%; }
    .width25 {width: 25}
    .gray { background-color: #CCC; color: #FFF; }
    .header { height: 90px; }
  </ui:style>
  <g:VerticalPanel styleName="{style.view}">
    <g:Label styleName="{style.title}">Create Process</g:Label>
	  <g:Label styleName="{style.label}">Select a process type:</g:Label>
	  <g:ListBox>
      <g:item value="adhoc">Ad-hoc Process</g:item>
    </g:ListBox>
    <g:Label styleName="{style.label}">Process Title:</g:Label>
    <g:TextBox styleName="{style.textbox}" />
    <g:FlowPanel>
      <g:Anchor styleName="{style.cancelLink}">Cancel</g:Anchor>
      <g:Button styleName="{style.button}">Create Process</g:Button>
    </g:FlowPanel>
  </g:VerticalPanel>
</ui:UiBinder>